<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomePage.Fragments.DashBoard.DashBoardFragment"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/greetings_template1"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:id="@+id/nameTV"
            android:gravity="center_vertical"
            app:drawableStartCompat="@drawable/person"
            android:drawablePadding="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/poppins_bold"
            />

        <LinearLayout
            android:id="@+id/cardHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/nameTV"
            android:background="@drawable/rounded_border_with_highlights"
            android:backgroundTint="@color/light"
            android:padding="20dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_template"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:fontFamily="@font/poppins_bold"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/calories_template"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        />
                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        />
                    <TextView
                        android:id="@+id/totalCalories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sample_cal"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:drawablePadding="10dp"
                        app:drawableStartCompat="@drawable/baseline_local_fire_department_24" />
                </LinearLayout>
                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"/>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    >
                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="?android:progressBarStyleHorizontal"
                        android:progress="80"
                        android:progressDrawable="@drawable/circle"/>
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/fat"
                        android:textColor="@color/black"
                        />
                </FrameLayout>
                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"/>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    >
                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="?android:progressBarStyleHorizontal"
                        android:progress="50"
                        android:progressDrawable="@drawable/circle"/>
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/pro"
                        android:textColor="@color/black"
                        />
                </FrameLayout>

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"/>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    >
                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="?android:progressBarStyleHorizontal"
                        android:progress="30"
                        android:progressDrawable="@drawable/circle"/>
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/carbs"
                        android:textColor="@color/black"
                        />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/latest_measurement"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_below="@+id/cardHolder"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/titleHeader"
            />

        <LinearLayout
            android:id="@+id/detailedInfoHolder"
            android:layout_below="@+id/titleHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_border_only"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/carbs"
                        android:contentDescription="@string/carbs_icon"/>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/carbohydrates"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sample_value"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        />

                </LinearLayout>
                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_border_only"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/protein"
                        android:contentDescription="@string/protein"/>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/protein"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sample_value"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        />

                </LinearLayout>
            </LinearLayout>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_border_only"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/calories"
                        android:contentDescription="@string/calories"/>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/calories"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sample_value"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        />

                </LinearLayout>
                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_border_only"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:contentDescription="@string/pizza_icon"
                        android:src="@drawable/pizza" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lorem_title"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sample_value"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>
            </LinearLayout>
            
            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_border_only"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/body_mass_index"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="18sp"
                    app:drawableEndCompat="@drawable/border_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sample_bmi"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        />
                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sample_scale"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        />
                </LinearLayout>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:text="@string/underweight"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:background="@drawable/rounded_left"
                        android:backgroundTint="#33ABF9"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:text="@string/normal"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:background="#3D9D29"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:text="@string/overweight"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:background="#FEB005"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:text="@string/obese"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:background="#FF502F"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:text="@string/extremely_obese"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:background="@drawable/rounded_right"
                        android:backgroundTint="#F11500"

                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        
    </RelativeLayout>
</ScrollView>