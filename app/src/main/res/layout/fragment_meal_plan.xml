<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.HomePage.Fragments.MealPlan.MealPlanFragment"
    android:orientation="vertical">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="10dp"
               app:cardUseCompatPadding="true"
               app:cardElevation="3dp"
               android:layout_margin="10dp"
               >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:background="@drawable/rounded_button"
                   android:backgroundTint="@color/white"
                   android:padding="20dp"
                   >
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <TextView
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:text="@string/greetings_template"
                           android:textColor="@color/dark"
                           android:fontFamily="@font/poppins_bold"
                           android:textSize="30sp"
                           />
                       <ImageView
                           android:layout_width="42dp"
                           android:layout_height="43dp"
                           android:src="@drawable/sun"
                           android:contentDescription="@string/sun"
                           />
                   </LinearLayout>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/daily_reminder"
                       android:textSize="20sp"
                       android:textColor="@color/dark"
                       />

               </LinearLayout>
           </androidx.cardview.widget.CardView>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:paddingStart="10dp"
               android:paddingEnd="10dp">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="200dp"
                   android:orientation="horizontal">
                   <androidx.cardview.widget.CardView
                       android:id="@+id/mealPlan1"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       app:cardElevation="3dp"
                       app:cardUseCompatPadding="true"
                       app:cardCornerRadius="20dp"
                       >
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical"
                           android:gravity="center_horizontal"
                           >
                           <ImageView
                               android:layout_width="match_parent"
                               android:layout_height="0dp"
                               android:layout_weight="1"
                               android:scaleType="centerCrop"
                               android:src="@drawable/banner4"
                               android:contentDescription="@string/image_description"
                               />

                           <TextView
                               android:background="@color/light"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text="@string/day_1_template"
                               android:textAlignment="center"
                               android:textSize="18sp"
                               android:textColor="@color/dark"
                               app:drawableEndCompat="@drawable/baseline_navigate_next_24"
                               android:padding="10dp"/>

                       </LinearLayout>
                   </androidx.cardview.widget.CardView>
                   <androidx.cardview.widget.CardView
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       app:cardElevation="3dp"
                       app:cardUseCompatPadding="true"
                       app:cardCornerRadius="20dp"
                       android:id="@+id/mealPlan2"
                       >
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical"
                           android:gravity="center_horizontal"
                           >
                           <ImageView
                               android:layout_width="match_parent"
                               android:layout_height="0dp"
                               android:layout_weight="1"
                               android:scaleType="centerCrop"
                               android:src="@drawable/banner1"
                               android:contentDescription="@string/image_description"
                               />

                           <TextView
                               android:background="@color/light"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text="@string/day_2_template"
                               android:textAlignment="center"
                               android:textSize="18sp"
                               android:textColor="@color/dark"
                               app:drawableEndCompat="@drawable/baseline_navigate_next_24"
                               android:padding="10dp"/>

                       </LinearLayout>
                   </androidx.cardview.widget.CardView>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="200dp"
                   android:orientation="horizontal">
                   <androidx.cardview.widget.CardView
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       app:cardElevation="3dp"
                       app:cardUseCompatPadding="true"
                       app:cardCornerRadius="20dp"
                       android:id="@+id/mealPlan3"
                       >
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical"
                           android:gravity="center_horizontal"
                           >
                           <ImageView
                               android:layout_width="match_parent"
                               android:layout_height="0dp"
                               android:layout_weight="1"
                               android:scaleType="centerCrop"
                               android:src="@drawable/banner2"
                               android:contentDescription="@string/image_description"
                               />

                           <TextView
                               android:background="@color/light"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text="@string/day_3_template"
                               android:textAlignment="center"
                               android:textSize="18sp"
                               android:textColor="@color/dark"
                               app:drawableEndCompat="@drawable/baseline_navigate_next_24"
                               android:padding="10dp"/>

                       </LinearLayout>
                   </androidx.cardview.widget.CardView>
                   <androidx.cardview.widget.CardView
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       app:cardElevation="3dp"
                       app:cardUseCompatPadding="true"
                       app:cardCornerRadius="20dp"
                       android:id="@+id/mealPlan4"
                       >
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical"
                           android:gravity="center_horizontal"
                           >
                           <ImageView
                               android:layout_width="match_parent"
                               android:layout_height="0dp"
                               android:layout_weight="1"
                               android:scaleType="centerCrop"
                               android:src="@drawable/banner3"
                               android:contentDescription="@string/image_description"
                               />

                           <TextView
                               android:background="@color/light"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text="@string/day_4_template"
                               android:textAlignment="center"
                               android:textSize="18sp"
                               android:textColor="@color/dark"
                               app:drawableEndCompat="@drawable/baseline_navigate_next_24"
                               android:padding="10dp"/>

                       </LinearLayout>
                   </androidx.cardview.widget.CardView>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="200dp"
                   android:orientation="horizontal">
                   <androidx.cardview.widget.CardView
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       app:cardElevation="3dp"
                       app:cardUseCompatPadding="true"
                       app:cardCornerRadius="20dp"
                       android:id="@+id/mealPlan5"
                       >
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical"
                           android:gravity="center_horizontal"
                           >
                           <ImageView
                               android:layout_width="match_parent"
                               android:layout_height="0dp"
                               android:layout_weight="1"
                               android:scaleType="centerCrop"
                               android:src="@drawable/banner5"
                               android:contentDescription="@string/image_description"
                               />

                           <TextView
                               android:background="@color/light"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text="@string/day_5_template"
                               android:textAlignment="center"
                               android:textSize="18sp"
                               android:textColor="@color/dark"
                               app:drawableEndCompat="@drawable/baseline_navigate_next_24"
                               android:padding="10dp"/>

                       </LinearLayout>
                   </androidx.cardview.widget.CardView>
                   <androidx.cardview.widget.CardView
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       app:cardElevation="3dp"
                       app:cardUseCompatPadding="true"
                       app:cardCornerRadius="20dp"
                       android:id="@+id/mealPlan6"
                       >
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical"
                           android:gravity="center_horizontal"
                           >
                           <ImageView
                               android:layout_width="match_parent"
                               android:layout_height="0dp"
                               android:layout_weight="1"
                               android:scaleType="centerCrop"
                               android:src="@drawable/banner6"
                               android:contentDescription="@string/image_description"
                               />

                           <TextView
                               android:background="@color/light"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text="@string/day_6_template"
                               android:textAlignment="center"
                               android:textSize="18sp"
                               android:textColor="@color/dark"
                               app:drawableEndCompat="@drawable/baseline_navigate_next_24"
                               android:padding="10dp"/>

                       </LinearLayout>
                   </androidx.cardview.widget.CardView>
               </LinearLayout>
           </LinearLayout>

       </LinearLayout>
   </ScrollView>



</LinearLayout>